<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_background"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_back_button"
        android:padding="@dimen/padding_default"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/toolbar_icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:text="@string/screen_title_travel_summary"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toStartOf="@id/btnSearch"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Button -->
    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_search_button"
        android:padding="@dimen/padding_default"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toStartOf="@id/btnFilter"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/toolbar_icon" />

    <!-- Filter Button -->
    <ImageButton
        android:id="@+id/btnFilter"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_filter_button"
        android:padding="@dimen/padding_default"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toStartOf="@id/btnMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/toolbar_icon" />

    <!-- Menu Button -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_menu_button"
        android:padding="@dimen/padding_default"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_dots"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/toolbar_icon" />

    <!-- EXPANDABLE SEARCH VIEW (Initially Gone) -->
    <EditText
        android:id="@+id/etSearchQuery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:hint="Search here..."
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/padding_small"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_title"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toStartOf="@+id/btnCloseSearch"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCloseSearch"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="@dimen/touch_target_min"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close Search"
        android:padding="@dimen/padding_default"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/viewToolbarDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/toolbar_icon" />

    <!-- Bottom Divider Line -->
    <View
        android:id="@+id/viewToolbarDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
