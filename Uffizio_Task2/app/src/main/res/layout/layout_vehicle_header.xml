<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_default">

    <!-- Vehicle Number Button -->
    <TextView
        android:id="@+id/tvVehicleNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/bg_vehicle_number_button"
        android:clickable="true"
        android:ellipsize="end"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/padding_default"
        android:paddingVertical="@dimen/padding_small"
        android:textColor="@color/primary_blue"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvDistance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vehicle No. 4 - Vehicle No.5ghgfj...." />

    <!-- Distance Text -->
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="8dp"
        android:textColor="@color/primary_blue"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvVehicleNumber"
        app:layout_constraintEnd_toStartOf="@id/ivArrow"
        app:layout_constraintTop_toTopOf="@id/tvVehicleNumber"
        tools:text="15493 km" />

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/cd_expand_card"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/tvVehicleNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvVehicleNumber"
        app:tint="@color/text_secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>
